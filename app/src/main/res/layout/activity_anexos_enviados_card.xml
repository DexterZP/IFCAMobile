<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    tools:context="br.dexter.ifcamobile.Anexo.Anexos">

    <LinearLayout
        android:background="@drawable/round7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nameOfImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:src="@drawable/ic_pdf"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameOfFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Autoavaliação 2 bimestre"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/nameOfPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biologia"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/nameOfData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data: 25 de mar"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        android:id="@+id/CircularProgress"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:indeterminate="true"
        android:layout_gravity="bottom"
        style="@style/GNowProgressBar"/>
</LinearLayout>